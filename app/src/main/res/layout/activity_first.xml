<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.MyPaintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:clipChildren="false"
    android:id="@+id/first_relative">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--app:cardCornerRadius="5dp"-->
        <!--android:id="@+id/first_card"-->
        <!--&gt;-->
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/head_background"/>-->


    <!--</android.support.v7.widget.CardView>-->
    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/head_background">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/deepblue_to_blue"
            android:foreground="@drawable/jinbi"
            android:layout_gravity="center_vertical"
            />
        <com.example.myapplication.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="998"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/deepblue_to_blue"
            android:foreground="@drawable/time"
            android:layout_gravity="center_vertical"
            />
        <com.example.myapplication.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/deepblue_to_blue"
            android:foreground="@drawable/xiong"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hua"
            android:layout_gravity="center_vertical"
            />
        <com.example.myapplication.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="60895"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/zhuanlun"
            android:layout_gravity="center_vertical"
            />
        <com.example.myapplication.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_image_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/first_linear"
        android:layout_marginTop="3dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/first_image_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/leftimage"/>
        <ImageView
            android:id="@+id/first_image_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/centerimage"/>
        <ImageView
            android:id="@+id/first_image_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rightimage"
            android:foreground="@drawable/zhuanpan"/>
    </LinearLayout>

    <com.example.myapplication.RingView
        android:id="@+id/first_ring"
        android:layout_below="@+id/first_image_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/di">
    </com.example.myapplication.RingView>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/first_ring"
        android:layout_marginTop="10dp">

        <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testItem">
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/women"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/women" />

                <ImageView
                    android:id="@+id/catchb"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/contin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/women"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="120dp"
                    android:src="@drawable/love"
                    android:id="@+id/love1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                >
                <ImageView
                    android:id="@+id/airplane"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"

                    android:src="@drawable/airplane" />

                <ImageView
                    android:id="@+id/catchc"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/contin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/airplane"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="160dp"
                    android:src="@drawable/love"
                    android:id="@+id/love2"
                    app:layout_constraintBottom_toBottomOf="@+id/airplane"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@id/testItem"

            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/lipstick"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="72dp"
                android:src="@drawable/love"
                android:id="@+id/love3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/catchd"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="260dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/contin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>
</com.example.myapplication.MyPaintLayout>
